{
    "name": "fp-selvbetjening",
    "private": true,
    "scripts": {
        "dev": "turbo dev",
        "build": "turbo build",
        "test": "turbo test",
        "lint": "turbo lint",
        "fp": "pnpm --filter foreldrepengesoknad run dev",
        "fp-prod": "pnpm --filter foreldrepengesoknad run start",
        "storybook-common": "pnpm --filter @navikt/fp-common run storybook",
        "storybook-deploy-clean-folder": "rm -rf ./.storybook-static-build",
        "storybook-deploy-build-all": "turbo build-storybook",
        "storybook-deploy-create-folder": "node scripts/create-storybook-index.js",
        "storybook-deploy-to-github": "gh-pages -d .storybook-static-build -t true",
        "deploy-storybook": "pnpm storybook-deploy-clean-folder && pnpm storybook-deploy-build-all && pnpm storybook-deploy-create-folder &&  pnpm storybook-deploy-to-github",
        "prepare": "husky install"
    },
    "dependencies": {
        "gh-pages": "5.0.0",
        "glob": "10.0.0",
        "husky": "8.0.3",
        "lint-staged": "13.2.1",
        "shelljs": "0.8.5",
        "turbo": "^1.8.6"
    },
    "pnpm": {
        "patchedDependencies": {
            "nav-frontend-alertstriper@4.0.2": "patches/nav-frontend-alertstriper@4.0.2.patch",
            "nav-frontend-ekspanderbartpanel@4.0.4": "patches/nav-frontend-ekspanderbartpanel@4.0.4.patch",
            "nav-frontend-etiketter@3.0.3": "patches/nav-frontend-etiketter@3.0.3.patch",
            "nav-frontend-grid@2.0.2": "patches/nav-frontend-grid@2.0.2.patch",
            "nav-frontend-hjelpetekst@3.1.3": "patches/nav-frontend-hjelpetekst@3.1.3.patch",
            "nav-frontend-knapper@3.1.3": "patches/nav-frontend-knapper@3.1.3.patch",
            "nav-frontend-lenkepanel@2.0.2": "patches/nav-frontend-lenkepanel@2.0.2.patch",
            "nav-frontend-lenker@2.0.2": "patches/nav-frontend-lenker@2.0.2.patch",
            "nav-frontend-lukknapp@2.0.2": "patches/nav-frontend-lukknapp@2.0.2.patch",
            "nav-frontend-modal@2.0.2": "patches/nav-frontend-modal@2.0.2.patch",
            "nav-frontend-paneler@3.0.2": "patches/nav-frontend-paneler@3.0.2.patch",
            "nav-frontend-popover@2.0.4": "patches/nav-frontend-popover@2.0.4.patch",
            "nav-frontend-skjema@4.0.6": "patches/nav-frontend-skjema@4.0.6.patch",
            "nav-frontend-spinner@3.0.1": "patches/nav-frontend-spinner@3.0.1.patch",
            "nav-frontend-typografi@4.0.2": "patches/nav-frontend-typografi@4.0.2.patch",
            "nav-frontend-veileder@3.0.3": "patches/nav-frontend-veileder@3.0.3.patch",
            "nav-frontend-veilederpanel@2.0.3": "patches/nav-frontend-veilederpanel@2.0.3.patch"
        }
    },
    "lint-staged": {
        "apps/**/*.{ts,tsx,js,jsx}": "eslint --cache --fix",
        "apps/**/*.css": "stylelint --fix",
        "apps/**/*.{ts,tsx,js,jsx, css}": "prettier --write",
        "packages/**/*.{ts,tsx,js,jsx}": "eslint --cache --fix",
        "packages/**/*.css": "stylelint --fix",
        "packages/**/*.{ts,tsx,js,jsx, css}": "prettier --write"
    }
}