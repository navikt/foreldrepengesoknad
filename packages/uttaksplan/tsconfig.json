{
    "extends": "tsconfig/vite.json",
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react-jsx",
        "paths": {
            "utils-test/*": ["./utils-test/*"],
            "uttaksplan/*": ["./uttaksplan/*"],
            "stories/*": ["./storybook/stories/*"],
            "app/*": ["./app/*"]
        },
        "rootDir": "src",
        "types": ["vite/client", "@testing-library/jest-dom", "vitest/globals"]
    },
    "include": [
        "src/**/*",
        "src/@types",
        "src/storybook",
        "../fp-common/src/common/types/StønadskontoType.ts",
        "../fp-common/src/common/types/NavnPåForeldre.ts"
    ],
    "exclude": ["node_modules"]
}
