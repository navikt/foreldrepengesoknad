{
    "extends": "tsconfig/vite.json",
    "compilerOptions": {
        "moduleResolution": "bundler",
        "baseUrl": "src",
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "rootDir": "src",
        "types": ["vite/client", "@testing-library/jest-dom", "vitest/globals"]
    },
    "include": ["src/**/*", ".storybook/**/*"],
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
