{
    "extends": "tsconfig/vite.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "appData/*": ["appData/*"],
            "types/*": ["types/*"],
            "utils/*": ["utils/*"]
        },
        "types": ["@testing-library/jest-dom", "vitest/globals"]
    },

    "include": ["src/**/*", "./@types"],
    "exclude": ["node_modules", "build", "src/build", "dist", "**.js"]
}
