{
    "extends": "tsconfig/vite.json",
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react-jsx",
        "paths": {
            "common/*": ["./common/*"],
            "stories/*": ["./storybook/stories/*"],
            "app/*": ["./app/*"]
        },
        "rootDir": "src",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "types": [  "@testing-library/jest-dom"]
    },
    
    "include": ["src/app/**/*",  "src/@types", "src/storybook"],
    "exclude": ["node_modules"]
}
