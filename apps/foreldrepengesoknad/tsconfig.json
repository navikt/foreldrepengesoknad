{
    "extends": "tsconfig/vite.json",
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react-jsx",
        "paths": {
            "utils-test/*": ["./utils-test/*"],
            "uttaksplan/*": ["./uttaksplan/*"],
            "stories/*": ["./storybook/stories/*"],
            "app/*": ["./app/*"]
        },
        "rootDir": "src",
        "types": ["vite/client", "node", "jest", "@testing-library/jest-dom", "vitest/globals"]
    },
    "include": ["src/app/**/*", "src/@types", "src/uttaksplan/**/*", "src/storybook"],
    "exclude": ["src/common/**/*", "node_modules"]
}
