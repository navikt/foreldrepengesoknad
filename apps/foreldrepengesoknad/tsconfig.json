{
    "extends": "tsconfig/vite.json",
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react-jsx",
        "paths": {
            "appData/*": ["app-data/*"],
            "pages/*": ["pages/*"],
            "steps/*": ["steps/*"],
            "utils/*": ["utils/*"],
            "api/*": ["api/*"],
            "types/*": ["types/*"],
            "storybookData/*": [".storybook/testData/*"]
        },
        "types": ["vite/client", "node", "@testing-library/jest-dom", "vitest/globals"]
    },
    "include": ["src/**/*", "@types", ".storybook/testData/**/*"],
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
