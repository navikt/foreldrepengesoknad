{
    "extends": "tsconfig/vite.json",
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react-jsx",
        "paths": {
            "appData/*": ["appData/*"],
            "pages/*": ["pages/*"],
            "steps/*": ["steps/*"],
            "utils/*": ["utils/*"],
            "api/*": ["api/*"],
            "types/*": ["types/*"],
            "storybookData/*": [".storybook/testData/*"]
        },
        "types": ["vite/client", "node", "@testing-library/jest-dom", "vitest/globals"]
    },
    "include": ["src/**/*", "@types", "src/uttaksplan/**/*", "src/uttaksplan-ny/**/*", "storybook/testData/**/*"],
    "exclude": ["src/common/**/*", "node_modules"]
}
