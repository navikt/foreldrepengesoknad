{
    "extends": "tsconfig/vite.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "styles/*": ["styles/*"],
            "types/*": ["types/*"],
            "appData/*": ["app-data/*"]
        },
        "types": ["@testing-library/jest-dom", "vitest/globals", "vite/client"]
    },
    "exclude": ["node_modules", "build", "scripts", "config", "src/build", "src/config", "dist"]
}
