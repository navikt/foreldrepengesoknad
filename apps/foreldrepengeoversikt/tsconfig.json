{
    "extends": "tsconfig/vite.json",
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react-jsx",
        "paths": {
            "app/*": ["app/*"],
            "assets/*": ["assets/*"],
            "storybook/*": ["storybook/*"]
        },
        "rootDir": "src",
        "types": ["@testing-library/jest-dom", "vite/client", "node", "vitest/globals"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "react-day-picker"]
}
