{
    "$schema": "https://turbo.build/schema.json",
    "globalPassThroughEnv": ["PACKAGES_AUTH_TOKEN"],
    "tasks": {
        "test": {
            "dependsOn": ["build", "lint", "^test"],
            "inputs": ["src/**/*.tsx", "src/**/*.ts"]
        },
        "build": {
            "dependsOn": ["^build", "lint"],
            "outputs": ["dist/**", "lib/**"]
        },
        "dev": {
            "persistent": true
        },
        "lint": {
            "dependsOn": ["lint:eslint", "lint:tsc"]
        },
        "lint:eslint": {},
        "lint:tsc": {},
        "build-storybook": {
            "dependsOn": ["build"]
        },
        "prettier": {
            "dependsOn": ["build"]
        }
    },
    "globalEnv": [
        "APPRES_CMS_URL",
        "APP_VERSION",
        "FEATURE_TEST_1JULI2024_REGLER",
        "LOG_VALIDATION",
        "INNSYN",
        "NODE_ENV",
        "ENV",
        "PORT"
    ]
}
