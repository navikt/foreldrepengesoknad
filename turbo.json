{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "test": {
            "dependsOn": [
                "build",
                "lint"
            ],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts"
            ]
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "lib/**"
            ]
        },
        "dev": {
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "lint:eslint",
                "lint:tsc"
            ]
        },
        "lint:eslint": {},
        "lint:tsc": {},
        "build-storybook": {
            "dependsOn": [
                "build"
            ]
        },
        "prettier": {
            "dependsOn": [
                "build"
            ]
        }
    },
    "globalEnv": [
        "APPRES_CMS_URL",
        "REST_API_URL",
        "LOGIN_URL",
        "FEATURE_VIS_FEILSIDE",
        "FEATURE_VIS_ALERTSTRIPE",
        "APP_VERSION",
        "LOG_VALIDATION",
        "NODE_ENV",
        "PUBLIC_PATH"
    ]
}
